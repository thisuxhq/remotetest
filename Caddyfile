remote.duntasks.com {
    reverse_proxy remote:3000 {
        # Preserve original headers for SvelteKit remote functions
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up Origin {>Origin}
    }
}

# For local development/testing with IP address
# Replace with your server's IP address
# :80 {
#     reverse_proxy duntasks:3000
# }